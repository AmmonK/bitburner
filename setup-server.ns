/** @param {NS} ns **/
export async function main(ns) {
	const serverName = ns.args[0];
	const botName = "bot-"+serverName;

	await ns.scp("hack.ns",botName);
	await ns.scp("grow.ns",botName);
	await ns.scp("weaken.ns",botName);

	await ns.exec("hack.ns",botName,40,serverName);
	await ns.exec("grow.ns",botName,40,serverName);
	await ns.exec("weaken.ns",botName,40,serverName);
}